<div align="center">
<%= form_tag help_path, :method => 'get' do -%>
<div>
<%= text_field_tag :search, params[:search] , class: 'input-large'%>
<%= submit_tag 'Find' %></div>

<% end -%>

<table border = "10",class="table table-bordered table-hover",style="padding-top: 10px;">
  <tr>
    <td style="padding-left: 5px; padding-right: 5px;"><p>Total number of open issues </p></td>
    <td style="padding-left: 5px; padding-right: 5px;"><p><%= @num_open %></p></td>
  </tr>
  <tr>
    <td style="padding-left: 5px; padding-right: 5px;"><p>Number of open issues that were opened in the last 24 hours </p></td>
    <td style="padding-left: 5px; padding-right: 5px;"><p><%= @num_24_hours %></p></td>
  </tr>
  <tr>
    <td style="padding-left: 5px; padding-right: 5px;"><p>Number of open issues that were opened more than 24 hours ago but less than 7 days ago </p></td>
    <td style="padding-left: 5px; padding-right: 5px;"><p><%= @num_7_days %></p></td>
  </tr>
  <tr>
    <td style="padding-left: 5px; padding-right: 5px;"><p>Number of open issues that were opened more than 7 days ago </p></td>
    <td style="padding-left: 5px; padding-right: 5px;"><p><%= @num_all_time %></p></td>
  </tr>
</table>
